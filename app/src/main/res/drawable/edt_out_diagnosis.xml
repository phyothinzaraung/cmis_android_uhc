<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_focused="true">
        <shape>
            <solid
                android:color="@color/color_white"
                />
            <corners android:radius="2dp"/>
            <stroke
                android:width="1dp"
                android:color="#BDBDBD"/>

            <padding
                android:left="10dp"
                android:right="10dp"
                android:top="10dp"
                android:bottom="10dp"/>
        </shape>

    </item>
    <item>
        <shape>
            <solid
                android:color="@color/color_white"
                />
            <corners android:radius="2dp"/>
            <stroke
                android:width="1dp"
                android:color="@color/color_grey_border"/>

            <padding
                android:left="10dp"
                android:right="10dp"
                android:top="10dp"
                android:bottom="10dp"/>
        </shape>

    </item>

</selector>