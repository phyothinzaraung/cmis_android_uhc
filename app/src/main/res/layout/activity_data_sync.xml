<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:background="@color/colorPrimary"
              android:gravity="center"
              android:keepScreenOn="true"
              android:orientation="vertical">

    <ProgressBar
            android:id="@+id/dataSync_Progress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:indeterminate="true"
            android:theme="@style/WhiteProgressTheme"
            android:visibility="gone"/>

    <TextView
            android:id="@+id/dataSync_InfoMessage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:gravity="center"
            android:textColor="@android:color/white"/>

    <com.google.android.material.button.MaterialButton
            android:id="@+id/dataSync_btnRetry"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:backgroundTint="@android:color/white"
            android:padding="20dp"
            android:text="@string/data_sync_try_again"
            android:textColor="@color/colorPrimary"
            android:visibility="gone"
            tools:visibility="visible"
            />

    <com.google.android.material.button.MaterialButton
            android:layout_marginTop="20dp"
            android:id="@+id/dataSync_btnLater"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:backgroundTint="@android:color/white"
            android:padding="20dp"
            android:text="@string/data_sync_later"
            android:textColor="@color/colorPrimary"
            android:visibility="gone"
            tools:visibility="visible"
            />

</LinearLayout>