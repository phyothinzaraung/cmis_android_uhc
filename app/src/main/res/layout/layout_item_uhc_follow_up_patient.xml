<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                   xmlns:tools="http://schemas.android.com/tools"
                                   android:id="@+id/itemUhcFollowUpPatientContainer"
                                   android:layout_width="match_parent"
                                   android:layout_height="wrap_content"
                                   android:clickable="true"
                                   android:focusable="true"
                                   android:foreground="?android:attr/selectableItemBackground"
                                   app:cardBackgroundColor="@android:color/white"
                                   app:cardCornerRadius="3dp"
                                   app:cardElevation="2dp"
                                   app:cardPreventCornerOverlap="true"
                                   app:cardUseCompatPadding="true">

    <FrameLayout
            android:id="@+id/itemUhcFollowUpPatientTypeIndicator"
            android:layout_width="5dp"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            tools:background="@color/color_observation"/>

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <TextView
                android:id="@+id/itemUhcFollowUpPatientTvType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:background="@color/color_problem"
                android:padding="5dp"
                android:text="Card Holder"
                android:textAlignment="center"
                android:textColor="@color/color_white"
                android:textSize="@dimen/txt_size_normal"/>

        <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/itemUhcFollowUpPatientIvPhoto"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_centerVertical="true"
                android:layout_marginEnd="10dp"
                android:layout_marginStart="10dp"
                android:scaleType="centerCrop"
                tools:src="@mipmap/sample1"/>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                android:layout_toEndOf="@id/itemUhcFollowUpPatientIvPhoto"
                android:layout_toStartOf="@id/itemUhcFollowUpPatientTvType"
                android:orientation="vertical">

            <TextView
                    android:id="@+id/itemUhcFollowUpPatientTvName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:textColor="@color/primary_text"
                    tools:text="Name : U Ba"/>

            <TextView
                    android:id="@+id/itemUhcFollowUpPatientTvAge"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:textColor="@color/primary_text"
                    tools:text="Age : 45"/>

            <TextView
                    android:id="@+id/itemUhcFollowUpPatientTvGender"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:textColor="@color/primary_text"
                    tools:text="Gender : Male"/>

        </LinearLayout>

    </RelativeLayout>

</androidx.cardview.widget.CardView>