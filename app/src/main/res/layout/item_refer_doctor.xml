<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                                   xmlns:card_view="http://schemas.android.com/apk/res-auto"
                                   xmlns:tools="http://schemas.android.com/tools"
                                   android:id="@+id/cv_doctor_container"
                                   android:layout_width="match_parent"
                                   android:layout_height="wrap_content"
                                   android:layout_marginEnd="5dp"
                                   android:layout_marginStart="5dp"
                                   android:layout_marginTop="5dp"
                                   card_view:cardBackgroundColor="@android:color/white"
                                   card_view:cardCornerRadius="4dp"
                                   card_view:cardElevation="2dp"
                                   card_view:cardUseCompatPadding="false">

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="10dp">

        <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/iv_doc_profile"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_centerVertical="true"
                android:layout_marginEnd="16dp"
                android:scaleType="centerCrop"
                tools:src="@mipmap/sample1"/>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/iv_doc_profile"
                android:orientation="vertical">

            <TextView
                    android:id="@+id/txt_doctor_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="2dp"
                    android:layout_marginEnd="5dp"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:textColor="@color/primary_text"
                    android:textSize="@dimen/txt_size_normal"
                    tools:text="Name : Dr. Khine Soe Win"/>

            <TextView
                    android:id="@+id/txt_job_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="2dp"
                    android:layout_marginEnd="5dp"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:textColor="@color/primary_text"
                    android:textSize="@dimen/txt_size_normal"
                    tools:text="Job Title : Doctor"/>

            <TextView
                    android:id="@+id/txt_clinic_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="2dp"
                    android:layout_marginEnd="5dp"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:textColor="@color/primary_text"
                    android:textSize="@dimen/txt_size_normal"
                    tools:text="Clinic Name : KSW Clinic"/>

            <TextView
                    android:id="@+id/txt_township"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="2dp"
                    android:layout_marginEnd="5dp"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:textColor="@color/primary_text"
                    android:textSize="@dimen/txt_size_normal"
                    tools:text="Township : Ahlone"/>

        </LinearLayout>

    </RelativeLayout>

</androidx.cardview.widget.CardView>