<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              android:padding="?dialogPreferredPadding">

    <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/suggestion_edit_dialog_input_layout_word"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            style="@style/AppTextInputLayout"
            android:gravity="center">

        <EditText
                android:id="@+id/suggestion_edit_edt_word"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:hint="@string/manage_suggestions_hint_enter_word"
                android:inputType="text"/>

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/suggestion_edit_dialog_input_layout_value"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            style="@style/AppTextInputLayout"
            android:gravity="center">

        <EditText
                android:id="@+id/suggestion_edit_edt_value"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:hint="@string/manage_suggestions_hint_enter_value"
                android:inputType="text"/>

    </com.google.android.material.textfield.TextInputLayout>

</LinearLayout>