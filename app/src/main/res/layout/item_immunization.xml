<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                   android:id="@+id/itemImmunization_cardContainer"
                                   android:layout_width="match_parent"
                                   android:layout_height="wrap_content"
                                   xmlns:tools="http://schemas.android.com/tools"
                                   app:cardBackgroundColor="@android:color/white"
                                   app:contentPadding="8dp"
                                   app:cardCornerRadius="8dp"
                                   app:cardElevation="2dp"
                                   app:cardPreventCornerOverlap="false"
                                   app:cardUseCompatPadding="true">

    <ToggleButton
            android:id="@+id/itemImmunization_btnCompleteToggle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/toggle_bg_selector"
            android:textAllCaps="false"
            android:textColor="@android:color/white"
            android:textSize="@dimen/txt_size_large"
            tools:textOff="BCG (at birth or 2 months old)"
            tools:textOn="BCG (at birth or 2 months old)"
    />

</androidx.cardview.widget.CardView>