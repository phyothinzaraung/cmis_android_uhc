<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginBottom="8dp"
        app:contentPadding="8dp"
        app:cardCornerRadius="4dp"
        app:cardElevation="2dp">

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/itemDisabilitySurveyTvQuestion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:layout_alignParentTop="true"
                android:textColor="@color/primary_text"
                tools:text="Do you have difficulty seeing, even if wearing glasses?"
                />

        <RadioGroup
                android:id="@+id/itemDisabilitySurveyRgOptions"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="8dp"
                android:layout_below="@id/itemDisabilitySurveyTvQuestion">

            <RadioButton
                    android:id="@+id/itemDisabilitySurveyRbNoDifficulty"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/primary_text"
                    android:textSize="16sp"
                    android:padding="8dp"
                    android:text="@string/rb_lbl_no_difficulty"/>

            <RadioButton
                    android:id="@+id/itemDisabilitySurveyRbSomeDifficulty"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/primary_text"
                    android:textSize="16sp"
                    android:padding="8dp"
                    android:text="@string/rb_lbl_some_difficulty"/>

            <RadioButton
                    android:id="@+id/itemDisabilitySurveyRbLotOfDifficulty"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/primary_text"
                    android:textSize="16sp"
                    android:padding="8dp"
                    android:text="@string/rb_lbl_lots_of_difficulty"/>

            <RadioButton
                    android:id="@+id/itemDisabilitySurveyRbCannotDo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/primary_text"
                    android:textSize="16sp"
                    android:padding="8dp"
                    android:text="@string/rb_lbl_cannot_do"/>

        </RadioGroup>

    </RelativeLayout>

</com.google.android.material.card.MaterialCardView>